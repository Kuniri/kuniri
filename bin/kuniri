#!/usr/bin/env ruby

require 'kuniri'
require 'optparse'
require 'kuniri/core/kuniri'
require 'kuniri/parser/xml_output_format'

options = {}

OptionParser.new do |opts|
  opts.banner = "Usage: example.rb [options]"
  opts.version = Kuniri::VERSION

  opts.on("-v", "--[no-]verbose", "Run verbosely") do |v|
    options[:verbose] = v
  end

  opts.on("--version", "Show Kuniri version") do |v|
    puts opts.ver
    exit
  end

  opts.on("-i", "Iterative mode") do |v|
    puts "Iterative mode..."
    kuniri = Kuniri::Kuniri.new
    kuniri.run_analysis
    kuniri.start_navigation_mode
  end

  opts.on("-p", "Parse project") do |v|
    puts "PARSER..."
  end

  opts.on("-e", "--export [FILENAME]", "Export XML") do |f|
    puts "Exporting XML..."
    if(f)
      options[:filename] = f
    else
      options[:filename] = 'outputKuniri/'
    end

    kuniri = Kuniri::Kuniri.new
    kuniri.run_analysis

    parser = Parser::XMLOutputFormat.new
    parser.set_path(options[:filename])
    parser.create_all_data(kuniri.get_parser())
  end

end.parse!

p options
p ARGV
